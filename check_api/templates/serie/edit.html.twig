{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block body %}

    <style>
        input, textarea {
            width: 100%;
        }
    </style>

    <div class="d-flex justify-content-between align-items-center pb-5">
        <h2>Modifier la série</h2>
        <a href="{{ path('series_index') }}" class="btn btn-secondary text-white">← Retour à la liste</a>
    </div>

    <form method="POST">
        <div>
            <input type="text" name="title" value="{{ serie.title }}">
        </div>
        <div>
            <input type="text" name="poster_url" value="{{ serie.posterUrl }}">
        </div>
        <div>
            <select name="type" id="type_select">
                <option value={{ serie.type }}>{{ serie.type }}</option>
                <option value="Série">Série</option>
                <option value="Mini série">Mini série</option>
                <option value="Web série">Web série</option>
                <option value="Série d'animation">Série d'animation</option>
                <option value="Émission">Émission</option>
                <option value="K-drama">K-drama</option>
                <option value="Anime">Anime</option>
            </select>
        </div>
        <div>
            <input type="text" name="country" value="{{ serie.country }}">
        </div>
        <div>
            <input type="number" name="release_date" value="{{ serie.releaseDate }}">
        </div>
        <div>
            <input type="text" name="platform" value="{{ serie.platform }}">
        </div>
        <div>
            <input type="number" name="nb_season" value="{{ serie.nbSeason }}">
        </div>
        <div>
            <textarea type="text" name="synopsis">{{ serie.synopsis }}</textarea>
        </div>
        <div>
            <select name="status" id="status_select">
                <option>{{ serie.status }}</option>
                <option value="Finie">Finie</option>
                <option value="Annulée">Annulée</option>
                <option value="En production">En production</option>
                <option value="En cours de diffusion">En cours de diffusion</option>
                <option value="À venir">À venir</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Modifier</button>
    </form>

{% endblock %}
