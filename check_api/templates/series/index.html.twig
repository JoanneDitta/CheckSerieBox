{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block body %}
<style>
    li {
        list-style-type: none;
    }
    ul {
        padding: 0%;
    }
    a {
        text-decoration: none;
        color: inherit;
    }
    th, td { padding-left: 10px; padding-right: 25px; }
    .poster { height: 225px; width: 150px;}
    .listCards {
        margin: auto;
        display: grid;
        grid-template-columns: repeat(6, 1fr);
        grid-gap: 30px 10px;
        grid-auto-rows: minmax(100px, auto);
        position: relative;
        width: fit-content;
        margin-bottom: 100px;
    }
    .card {
        position: relative;
        border-radius: 3%;
        border: solid 1px #666666;
        box-shadow: 0 5px 10px #14181c;
        margin: 2px;
        height: 225px;
    }
    .card:hover {
        border: solid 3px #dadada;
        margin: 0;
    }
    .poster{
        height: 225px;
        width: 150px;
    }
    .serieTitle{
        position: absolute;
    }
</style>

{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}

<div style="display: flex; justify-content: space-between;; align-items: center; padding-bottom: 25px;">
    <h1>Liste des séries</h1>
    <a href="{{ path('serie_add') }}" class="btn btn-primary">Ajouter une série</a>
</div>

<ul class="listCards">
    {% for serie in series %}
        <li class="card">
        {# <li>
            <div class="card"> #}
                <article class="cardPoster">
                    <img class="poster" src={{ serie.poster }} alt={`poster_{{ serie.name }}`} />
                    {# <h1 className="serieTitle">{{ serie.name }}</h1> #}
                </article>
                <div class="d-flex justify-content-around align-items-center">
                    <a href="{{ path('serie_edit', {id: serie.id}) }}" class="">
                        <img src={{ asset('Images/edit.png') }} style="width: 13px; height: 13px;" alt="edit" />
                    </a>
                    <a href="{{ path('serie_delete', {id: serie.id}) }}" class="">
                        <img src={{ asset('Images/delete.png') }} style="width: 13px; height: 13px;" alt="delete" />
                    </a>
                </div>
            {# </div> #}
        </li>
    {% endfor %}
</ul>


<table class="table table-dark table-striped">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Poster</th>
        <th>Type</th>
        <th>Country</th>
        <th>Date</th>
        <th>Platform</th>
        <th>Season</th>
        <th>Comment</th>
        <th>Status</th>
    </tr>
    {% for serie in series %}
        <tr>
            <td>{{ serie.id }}</td>
            <td>{{ serie.name }}</td>
            <td><img src={{ serie.poster }} style="max-height: 100px" alt={{ serie.name }} /></td>
            <td>{{ serie.type }}</td>
            <td>{{ serie.country }}</td>
            <td>{{ serie.date }}</td>
            <td>{{ serie.platform }}</td>
            <td>{{ serie.nb_Season }}</td>
            <td>{{ serie.comment }}</td>
            <td>{{ serie.status }}</td>

            {# {% if is_granted('ROLE_ADMIN') %} #}
                <td class="">
                    <a href="{{ path('serie_edit', {id: serie.id}) }}" class="btn btn-primary">
                        <img src={{ asset('Images/edit.png') }} style="width: 20px; height: 20px;" alt="edit" />
                    </a>
                </td>
                <td class="">
                    <a href="{{ path('serie_delete', {id: serie.id}) }}" class="btn btn-danger">
                        <img src={{ asset('Images/delete.png') }} style="width: 20px; height: 20px;" alt="delete" />
                    </a>
                </td>
            {# {% endif %} #}

        </tr>
    {% endfor %}
</table>



{% endblock %}

