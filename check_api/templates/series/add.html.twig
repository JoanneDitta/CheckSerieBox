{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block body %}
<style>
</style>

<div style="display: flex; justify-content: space-between; align-items: center; padding-bottom: 25px;">
    <h1>Ajouter une série</h1>
    <a href="{{ path('series_index') }}" class="btn btn-info text-white">Retour à la liste</a>
</div>

<form method="POST">
    <div style="padding-bottom: 5px;">
        <input type="text" name="name" placeholder="Nom">
    </div>
    <div style="padding-bottom: 5px;">
        <input type="url" name="poster" placeholder="Poster URL">
    </div>
    <div style="padding-bottom: 5px;">
        {# <input type="text" name="type" placeholder="Type"> #}
        <select name="type" id="type_select">
            <option value="Série">Série</option>
            <option value="Mini série">Mini série</option>
            <option value="Web série">Web série</option>
            <option value="Série d'animation">Série d'animation</option>
            <option value="Émission">Émission</option>
            <option value="K-drama">K-drama</option>
            <option value="Anime">Anime</option>
        </select>
    </div>
    <div style="padding-bottom: 5px;">
        <input type="text" name="country" placeholder="Pays">
    </div>
    <div style="padding-bottom: 5px;">
        <input type="number" name="date" placeholder="Date">
    </div>
    <div style="padding-bottom: 5px;">
        <input type="text" name="platform" placeholder="Plateforme">
    </div>
    <div style="padding-bottom: 5px;">
        <input type="number" name="nbSeason" placeholder="Nombre de saisons">
    </div>
    <div style="padding-bottom: 5px;">
        <input type="text" name="comment" placeholder="Synopsis">
    </div>
    <div style="padding-bottom: 5px;">
        <select name="status" id="status_select">
            <option value="finie">Finie</option>
            <option value="annulee">Annulée</option>
            <option value="en_production">En production</option>
            <option value="en_diffusion">En cours de diffusion</option>
            <option value="a_venir">À venir</option>
        </select>
        {# <input type="text" name="status" placeholder="Statut"> #}
    </div>
    <button type="submit" class="btn btn-primary">Ajouter</button>
</form>

{% endblock %}
