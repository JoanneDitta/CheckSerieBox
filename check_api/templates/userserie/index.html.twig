<style>
    .listCards {
        margin: auto;
        display: grid;
        grid-template-columns: repeat(6, 1fr);
        grid-gap: 5px;
        grid-auto-rows: minmax(100px, auto);
        position: relative;
        width: fit-content;
        margin-bottom: 100px;
    }
    .cardPoster {
        position: relative;
        border-radius: 4%;
        border: solid 1px #666666;
        box-shadow: 0 5px 10px #14181c;
        margin: 2px;
        width: fit-content;
    }
    .cardPoster:hover {
        border: solid 2px;
        margin: 0;
    }
    .cardPoster.list-watched:hover {
        border: solid 2px #6800D8;
    }
    .cardPoster.list-watchlist:hover {
        border: solid 2px #001DD8;
    }
    .cardPoster.list-watching:hover {
        border: solid 2px #269E19;
    }
    .cardPoster.list-dropped:hover {
        border: solid 2px #D80004;
    }
    .poster{
        border-radius: 3%;
        height: 225px;
        width: 150px;
    }
    .serieTitle{
        position: absolute;
    }

    .poster-actions button {
        background: none;
        border: none;
    }
    .poster-card {
        cursor: pointer;
    }
    .poster-actions {
        bottom: -100px;
        left: 50%;
        transform: translateX(-50%);
        gap: 10px;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.3s ease;
    }
    .poster-card:hover .poster-actions {
        opacity: 80%;
        pointer-events: auto;
    }
    .poster-actions button {
        background: none;
        border: none;
        opacity: 0.75;
        transition: opacity 0.2s ease, transform 0.2s ease;
        cursor: pointer;
    }
    .poster-actions button:hover {
        opacity: 1;
        transform: scale(1.05);
    }
    .poster-actions button.active {
        opacity: 1;
        transform: scale(1.15);
    }

    .serie-action.active[data-list="watched"] svg {
        fill: #6800D8;
    }
    .serie-action.active[data-list="watching"] svg {
        fill: #269E19;
    }
    .serie-action.active[data-list="watchlist"] svg {
        fill: #001DD8;
    }
    .serie-action.active[data-list="dropped"] svg {
        fill: #D80004;
    }
    .serie-action.active[data-list="like"] svg {
        stroke: #D87700;
    }


</style>

